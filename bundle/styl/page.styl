$cls = 'page'

.{$cls}
  &__inner
    display table
    width 100%
    height 100%
    border-spacing 0

  &__left
    display table-cell
    vertical-align top
    width 44.5%
    height 100%
    font-size 0

  &__right
    display table-cell
    vertical-align top
    width 55.5%
    height 100%
    font-size 0

  &__right-inner
    display table
    width 100%
    height 100%
    border-spacing 0
    .tabs
      width 61.5%
      display table-cell
      vertical-align top
      //background-color #f4f4f4


@media $mDesktop
  .{$cls}
    &__left
      width 48%
    &__right
      width 52%
      .tabs
        width 63.5%

    &__inner_index
      .{$cls}
        &__left
          width 49%
        &__right
          width 51%
