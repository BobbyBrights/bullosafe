$cls = 'page'

.{$cls}
  &__inner
    display table
    width 100%
    height 100%
    border-spacing 0

  &__left
    display table-cell
    vertical-align top
    width 44.5%
    height 100%
    font-size 0

  &__right
    display table-cell
    vertical-align top
    width 55.5%
    height 100%
    font-size 0

  &__right-inner
    display table
    width 100%
    height 100%
    border-spacing 0

@media $mDesktop
  .{$cls}
    &__left
      width 48%
    &__right
      width 52%

    &__inner_index
      .{$cls}
        &__left
          width 49%
        &__right
          width 51%
