$cls = 'page'

.{$cls}
  background-color #262a30

  &__inner
    position relative
    margin-top 113px
    font-size 0

  &__left
    position absolute
    left 0
    display inline-block
    vertical-align top
    width 44.5%
    font-size 0
    overflow hidden
    transition transform .2s ease, bottom .5s ease, position .5s ease

  &__right
    position absolute
    right 0
    display inline-block
    vertical-align top
    width 55.5%
    font-size 0
    overflow hidden
    transition transform .2s ease, bottom .5s ease, position .5s ease

  &__right-inner
    display table
    width 100%
    height 100%
    border-spacing 0
    .tabs
      width 61.5%
      display table-cell
      vertical-align top
      //background-color #f4f4f4

  ._fixed
    position fixed
    bottom 0



@media $mDesktop
  .{$cls}
    &__left
      width 48%
    &__right
      width 52%
      .tabs
        width 63.5%

    &__inner_index
      .{$cls}
        &__left
          width 49%
        &__right
          width 51%
