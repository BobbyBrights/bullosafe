$cls = 'icon'

.{$cls}
  display inline-block
  vertical-align middle
  background-repeat no-repeat
  cursor pointer

  &_pointer-down-green
    width 12px
    height 8px
    margin-left 5px
    background-image url(../img/icon-pointer-down-green.png)
    background-size 12px 8px

  &_help
    vertical-align top
    width 24px
    height @width
    font-size 14px
    line-height @width
    text-align center
    font-weight 700
    color #fff
    background-color alpha(#37475d, 40%)
    border-radius 50%