$cls = 'radio-buttons'

.{$cls}
  font-size 0

  &__item
    display inline-block
    vertical-align top
    width 24.4%
    min-width 80px
    &:first-of-type .{$cls}__label
      border-top-left-radius 4px
      border-bottom-left-radius 4px
      border-left 1px solid $border
    &:last-of-type .{$cls}__label
      border-top-right-radius 4px
      border-bottom-right-radius 4px


  &__input
    display none
    &:checked + .{$cls}__label
      color #fff
      background-color $green
      border-color $green

  &__label
    display block
    font-family $openSans
    font-size 14px
    line-height 42px
    text-align center
    color $black
    background-color #fff
    border 1px solid $border
    border-left none
    cursor pointer
    transition background-color .2s ease, color .2s ease, border-color .2s ease


@media $mDesktop
  .{$cls}
    white-space nowrap