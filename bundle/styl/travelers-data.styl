$cls = 'travelers-data'

.{$cls}
  &__added-list
    margin-bottom 7%
    font-size 0

  &__added-item
    display inline-block
    vertical-align top
    padding-top 5px
    padding-right 15px
    padding-bottom 7px
    padding-left 15px
    color #9b9b9b
    font-family $openSans
    font-size 14px
    border-radius 52px
    background-color #f7f8f4
    &:not(:last-of-type)
      margin-right 14px

  &__add-new
    margin-bottom 8.5%
    padding-top 5.5%
    text-align center
    .button
      button-height(42px, 24px)
      font-family $openSans
      font-size 14px
      line-height 20px
      .icon
        display inline-block
        vertical-align middle
        margin-right 10px
        width 23px
        height 25px

  &__pay
    padding-top 6%
    border-top 1px solid #e0e4ea
    font-size 0

  &__pay-price
    display inline-block
    vertical-align middle
    width 40%
    margin-right 2%

  &__pay-price-title
    font-family $openSans
    font-size 14px
    color #9b9b9b

  &__pay-price-number
    font-size 30px
    font-weight 500

  &__pay-btn
    position relative
    display inline-block
    vertical-align middle
    width 58%
    .button
      width 100%

  &__submit-icon
    position absolute
    right 7%
    top 50%
    transform translateY(-50%)
    .icon
      width 8px
      height 13px
      fill #fff

@media $mDesktop
  .{$cls}
    &__added-item
      &:not(:last-of-type)
        margin-bottom 10px
    &__pay-price
      width 100%
      margin-bottom 20px
    &__pay-btn
      width 100%