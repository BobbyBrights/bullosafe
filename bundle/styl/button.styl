$cls = 'button'

.{$cls}
  position relative
  display inline-block
  vertical-align top
  width auto
  padding-left 30px
  padding-right 25px
  border-radius 56px
  font-family $dinCondensed
  text-align center
  text-decoration none
  color #fff
  border none
  outline none
  cursor pointer
  overflow hidden
  transition background-color .2s ease, box-shadow .2s ease
  &:active
    box-shadow inset 0 0 10px alpha($black, 40%)
  input[type='file']
    position absolute
    top -100px
    left 0
    width 0
    height 0
    cursor pointer
    opacity 0


  &_size_m
    button-height(42px, 20px)
    font-size 20px
    font-weight 500
    letter-spacing 1.51px
  &_size_l
    button-height(50px, 20px)
    font-size 20px
    font-weight 500
    letter-spacing 1.51px

  &_color
    &_green
      background-color $btn-green
      &:hover
        background-color darken($btn-green, 7%)
    &_transparent
      background-color transparent
      border 1px solid #fff
      &:hover
        background-color rgba(255,255,255 .2)
    &_gray
      background-color transparent
      border 1px solid #e0e4ea
      color #9b9b9b
      &:hover
        background-color rgba(255,255,255 .2)

  &_uppercase
    text-transform uppercase
