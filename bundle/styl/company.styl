$cls = 'company'

.{$cls}
  background #fff
  width 432px

  &__header
    display table
    width 100%
    padding-top 15px
    padding-right 3.5%
    padding-bottom 15px
    padding-left 5%
    font-size 0
    white-space nowrap
    border-bottom 1px solid $border

  &__logo
    display table-cell
    vertical-align middle
    width 100%

  &__price
    display table-cell
    vertical-align middle
    width 1px
    padding-right 20px
    font-size 30px
    font-weight 400
    color $black

  &__buy
    display table-cell
    vertical-align middle
    width 1px

  &__info
    height 63px
    font-size 0

  &__info-more
    display inline-block
    vertical-align top
    width 33.3%
    height 100%
    padding-top 7px
    padding-left 5.5%
    cursor pointer
    transition background-color .2s
    &:hover
      background-color rgba(224, 228, 234, 0.3);
      .{$cls}__info-more-link
        color darken($link-green, 30%)

  &__info-more-link
    font-size 14px

  &__info-title
    margin-bottom 2px
    font-family "Open Sans"
    font-size 14px
    color #9b9b9b

  &__info-rating
    font-size 14px
    font-weight 700
    color $green

  &__info-expert
    display inline-block
    vertical-align top
    width 33.3%
    height 100%
    padding-top 9px
    padding-left 3.3%

  &__info-asn
    position relative
    display inline-block
    vertical-align top
    width 33.3%
    height 100%
    padding-top 11px
    padding-left 6%
    &:before
      content ''
      position absolute
      top calc(50% - 17px)
      left 8%
      height 35px
      width 2px
      background-color $border

  &__content
    display none
    border-top 1px solid $border

  &__pdf-list
    font-size 0
    padding-top 23px
    padding-bottom 21px
    border-bottom 1px solid $border

  &__pdf-item
    display inline-block
    vertical-align middle
    padding-left 7%
    &:nth-of-type(1)
      width 53%
    &:nth-of-type(2)
      width 47%
    &_sep
      position relative
      &:before
        content ''
        position absolute
        top calc(50% - 14px)
        left 7%
        height 28px
        width 2px
        background-color $border

  &__included-title
    padding-top 23px
    padding-bottom 24px
    padding-left 6%
    color $black

  &__included-list
    width 100%
    margin-bottom 13px
    border-collapse collapse
    border-spacing 0
    font-family $openSans
    font-size 14px
    line-height 20px
    color $black

  &__included-name
    vertical-align top
    width 100%
    padding-left 6.3%
    padding-bottom 9px

  &__included-price
    vertical-align top
    width 1px
    padding-right 2.5%
    text-align right
    white-space nowrap

  &__footer
    padding-top 17px
    padding-right 5%
    padding-bottom 23px
    padding-left 5%
    white-space nowrap
    border-top 1px solid $border
    &:after
      clearfix()

  &__footer-price
    float RIGHT
    padding-top 4px
    padding-right 15px
    font-size 30px
    font-weight 400
    color $black

  &__footer-buy
    float right


&._open
    .{$cls}
      &__content
        display block