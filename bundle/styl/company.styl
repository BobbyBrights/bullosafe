$cls = 'company'

.{$cls}
  background #fff

  &__header
    display table
    width 100%
    min-height 82px
    padding-top 3.3%
    padding-right 4.3%
    padding-bottom 2.6%
    padding-left 4.3%
    font-size 0
    white-space nowrap
    border-bottom 1px solid $border

  &__logo
    display table-cell
    vertical-align middle
    width 100%

  &__price
    display table-cell
    vertical-align middle
    width 1px
    padding-right 3.2%
    font-size 30px
    font-weight 500
    color $black

  &__chosen
    display table-cell
    vertical-align middle
    //min-width 43px
    //max-width 43px
    //max-height 43px
  &__chosen-icon
    width 43px
    height 43px
    padding-top 12px
    background-color #77bc1f
    border-radius 50%
    .icon
      display block
      width 21px
      height 18px
      margin auto


  &__buy
    display table-cell
    vertical-align middle
    width 1px

  &__info
    display table
    width 100%
    height 100%
    border-spacing 0

  &__info-more
    display table-cell
    vertical-align top
    width 25.2%
    height 100%
    padding-top 1.4%
    padding-right 2%
    padding-left 6.2%
    cursor pointer
    transition background-color .2s
    &:hover
      background-color rgba(224, 228, 234, 0.3);
      .{$cls}__info-more-link
        color darken($link-green, 30%)

  &__info-more-link
    font-size 14px

  &__info-title
    margin-bottom 2px
    font-family "Open Sans"
    font-size 14px
    color #9b9b9b

  &__info-rating
    font-size 14px
    font-weight 700
    color $green

  &__info-expert
    display table-cell
    vertical-align top
    width 32%
    height 100%
    padding-top 1.5%
    padding-right 2%
    padding-bottom 1.5%
    padding-left 3.3%

  &__info-asn
    position relative
    display table-cell
    vertical-align top
    width 42.8%
    height 100%
    padding-top 1.5%
    padding-right 2%
    padding-bottom 1.5%
    padding-left 6%
    &:before
      content ''
      position absolute
      top calc(50% - 17px)
      left 6%
      height 58%
      width 2px
      background-color $border

  &__content
    display none
    border-top 1px solid $border

  &__pdf-list
    font-size 0
    padding-top 23px
    padding-bottom 21px
    border-bottom 1px solid $border

  &__pdf-item
    display inline-block
    vertical-align middle
    padding-left 5%
    &:nth-of-type(1)
      width 41%
    &:nth-of-type(2)
      width 59%
    &_sep
      position relative
      padding-left 7%
      &:before
        content ''
        position absolute
        top calc(50% - 14px)
        left 5%
        height 28px
        width 2px
        background-color $border

  &__included
    padding-right 10%

  &__included-title
    padding-top 4%
    padding-bottom 4%
    padding-left 5%
    color $black
    font-weight 500

  &__included-list
    width 100%
    margin-bottom 13px
    border-collapse collapse
    border-spacing 0
    font-family $openSans
    font-size 14px
    line-height 20px
    color $black

  &__included-name
    vertical-align top
    //width 100%
    padding-left 8.8%
    padding-bottom 1.7%

  &__included-price
    vertical-align top
    //width 1px
    text-align right
    white-space nowrap

  &__footer
    padding-top 17px
    padding-right 5%
    padding-bottom 23px
    padding-left 5%
    white-space nowrap
    border-top 1px solid $border
    &:after
      clearfix()

  &__footer-price
    float right
    padding-top 4px
    padding-right 15px
    font-size 30px
    font-weight 500

  &__footer-buy
    float right

  &__phones
    font-family $openSans
    font-size 0

  &__phones-item
    display inline-block
    vertical-align top
    width 50%
    &:nth-of-type(1)
      float left
    &:nth-of-type(2)
      text-align right

  &__phones-title
    font-size 14px
    margin-bottom 5px

  &__phones-number
    font-family $dinCondensed
    font-size 30px
    font-weight 500



  &_chosen
    .{$cls}
      &__pdf-list
        border-bottom-color $green
      &__footer
        white-space normal

  &._open
    .{$cls}
      &__content
        display block




@media $mDesktop
  .{$cls}
    &__header
      padding-top 4%
      padding-bottom 3.4%

    &__info
      min-height 62px

    &__info-more
      width 33.2%
      padding-top 2.2%
      padding-left 5.2%

    &__info-expert
      width 35%
      padding-top 2.2%
      padding-left 3%

    &__info-asn
      width 31.8%
      padding-top 2.6%
      padding-left 4%
      &:before
        left 1%