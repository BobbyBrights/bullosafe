$cls = 'solutions'

.{$cls}
  &__title
    margin-bottom 17px

  &__item
    position relative
    margin-bottom 5px
    padding 4% 3.4% 1.3%
    font-size 0
    background-repeat no-repeat
    background-position top center
    background-size cover
    transition box-shadow .2s ease
    &._active
      box-shadow inset 0 0 0 5px $border-green

  &__radio
    display inline-block
    vertical-align top
    width auto
    margin-right 17px

  &__type
    display inline-block
    vertical-align top
    width calc(100% - 43px) //radiobutton width + margin-right
    padding-top 4px
    cursor pointer

  &__type-title
    margin-bottom 13px
    color #fff
    font-weight 500
    text-shadow 0 1px 0 rgba(0, 0, 0, 0.5)

  &__type-description
    padding-bottom 1%
    font-family $openSans
    font-size 14px
    line-height 20px
    color #fff
    text-shadow 0 1px 0 rgba(0, 0, 0, 0.5)