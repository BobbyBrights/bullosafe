$cls = 'dropdown'

.{$cls}
  &__header
    position relative
    padding-top 2%
    padding-left 4.3%
    padding-right 5%
    padding-bottom 2.3%
    background-color #f6f7f9
    cursor pointer
    .title
      color #77bc1f
      margin-bottom 0
    .{$cls}__icon
      position absolute
      top calc(50% - 6px)
      right 2%
      fill $green
      transform rotate(-90deg)
      .icon
        width 17px
        height 12px

  &__content
    padding-top 5%
    padding-right 4.3%
    padding-left 4.3%
    padding-bottom 8%

  &__title
    font-weight 500
    margin-bottom 4.2%

  &__content
    display none


  &._open
    .{$cls}
      &__content
        display block


@media $mDesktop
  .{$cls}
    &__header
      .{$cls}__icon
        right 5%