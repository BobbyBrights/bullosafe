$cls = 'helper'

.{$cls}
  display none
  vertical-align top
  width 38.5%
  padding-top 20px
  padding-right 15px
  padding-left 11px
  font-family $openSans
  background #f4f4f4
  box-shadow inset 12px 0 0 alpha($border, 39%)

  &__item
    &:not(:last-of-type)
      margin-bottom 20px

  &__time
    margin-bottom 15px
    padding-left 7px
    font-size 12px
    line-height 15px
    color #9b9b9b

  &__answer
    font-size 0

  &__icon
    display inline-block
    vertical-align top
    width 28px
    height @width
    margin-top 13px
    margin-right 10px
    font-size 18px
    line-height @width
    text-align center
    font-weight 700
    color #fff
    background-color $green
    border-radius 50%

  &__text
    position relative
    display inline-block
    vertical-align top
    width calc(100% - 38px)
    padding 11px 24px 17px 20px
    color #fff
    font-size 14px
    line-height 20px
    background-color #4a4a4a
    border-radius 3px
    &:before
      content ''
      position absolute
      top 21px
      left -8px
      width 0
      height 0
      border-style solid
      border-width 7.5px 8px 7.5px 0
      border-color transparent #4a4a4a transparent transparent


  &._visible
    display table-cell


@media $mDesktop
  .{$cls}
    padding-right 10px
    box-shadow -13px 0 0 alpha(#262a30, 46%)

    &__time
      margin-bottom 13px

    &__icon
      margin-top 0
      margin-right 0
      margin-bottom 12px

    &__answer
      padding-left 4.4%

    &__text
      display block
      width 100%
      font-size 12px
      &:before
        left 8px
        top -8px
        border-width 0 7.5px 8px 7.5px
        border-color transparent transparent #4a4a4a transparent